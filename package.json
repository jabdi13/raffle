{
  "name": "rifa",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json server.ts",
    "dev:socket": "ts-node --project tsconfig.server.json socketio-server.ts",
    "dev:split": "concurrently \"npm run dev:next\" \"npm run dev:socket\"",
    "dev:next": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production ts-node --project tsconfig.server.json server.ts",
    "start:socket": "NODE_ENV=production ts-node --project tsconfig.server.json socketio-server.ts",
    "lint": "eslint",
    "seed": "ts-node --project tsconfig.server.json prisma/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "node -r dotenv/config $(which prisma) migrate deploy",
    "prisma:studio": "node -r dotenv/config $(which prisma) studio"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "canvas-confetti": "^1.9.4",
    "dotenv": "^17.2.3",
    "next": "16.0.3",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "prisma": "^7.0.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
